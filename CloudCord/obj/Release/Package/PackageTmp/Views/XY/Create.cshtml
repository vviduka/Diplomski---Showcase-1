@model CloudCord.Models.XYconversion

@{
    ViewBag.Title = "Calculate";
}

<h2>Calculate</h2>

@using (Html.BeginForm("CreateOption", "XY", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.createdIz)

    <fieldset>
        <legend>XYconversion</legend>

                <div class="editor-label">
            @Html.LabelFor(model => model.tagIz)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tagIz)
            @Html.ValidationMessageFor(model => model.tagIz)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.xCoord)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.xCoord)
            @Html.ValidationMessageFor(model => model.xCoord)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.yCoord)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.yCoord)
            @Html.ValidationMessageFor(model => model.yCoord)
        </div>
        <p>
            <input type="submit" name="submitButton" value="Calculate" />
        </p>
        @if (Model.ECoord != null)
        {
        <div class="editor-label">
            @Html.LabelFor(model => model.ECoord)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ECoord)
            @Html.ValidationMessageFor(model => model.ECoord)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NCoord)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NCoord)
            @Html.ValidationMessageFor(model => model.NCoord)
        </div>
        <p>
            <input type="submit" name="submitButton" value="Save" />
        </p>  
        }
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jQuerryDecimalFix")
}
